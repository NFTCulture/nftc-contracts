{
    "name": "@nftculture/nftc-contracts",
    "version": "2.1.0",
    "description": "NFTCulture Open Source Contracts Project",
    "author": "@NFTCulture",
    "license": "MIT",
    "main": "dist/nftc/index.js",
    "typings": "dist/nftc/index.d.ts",
    "scripts": {
        "typecheck":"tsc --project tsconfig.module.json --noEmit && tsc --project tsconfig.test.json --noEmit",
        "build-ts:clean": "shx rm -rf dist",
        "build-ts:create-index": "cti -b create ./src",
        "build-ts:compile": "tsc -p tsconfig.module.json --declaration",
        "build": "run-p build:*",
        "build:ts-module": "run-s build-ts:*",
        "build:hardhat": "npx hardhat compile",
        "fix": "run-s fix:*",
        "fix:prettier-sol": "prettier \"contracts/**/*.sol\" --write",
        "fix:prettier-ts": "prettier \"src/**/*.ts\" --write",
        "fix:lint": "eslint src --ext .ts --fix",
        "test": "npx hardhat test --typecheck --parallel",
        "test:np": "npx hardhat test --typecheck",
        "test:gas": "set REPORT_GAS=true && npx hardhat test",
        "test:coverage": "npx hardhat coverage",
        "test:coverage:view": "open-cli coverage/index.html",
        "publish:commit": "npm publish --registry https://npm.pkg.github.com",
        "publish:dry": "npm publish --dry-run",
        "pub": "run-s fix build test publish:commit",
        "pub:dry": "run-s fix build test publish:dry"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^6.1.0",
        "@openzeppelin/contracts": "^4.9.5",
        "@types/sinon": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "chai": "^4.3.7",
        "chalk": "^4.1.2",
        "create-ts-index": "^1.14.0",
        "dotenv": "^16.3.1",
        "erc721a": "^4.2.3",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.26.0",
        "ethers": "^6.15.0",
        "hardhat": "^2.26.5",
        "hardhat-contract-sizer": "^2.10.0",
        "keccak256": "^1.0.6",
        "npm-run-all": "^4.1.5",
        "open-cli": "^7.1.0",
        "prettier": "^2.8.8",
        "prettier-plugin-solidity": "^1.1.3",
        "shx": "^0.3.4",
        "sinon": "^17.0.1",
        "typescript": "^5.9.3",
        "web3": "^1.10.0",
        "web3-utils": "^4.0.3"
    },
    "files": [
        "/contracts/**/*.sol",
        "/dist/nftc",
        "/docs",
        "CHANGELOG.md",
        "LICENSE",
        "README.md"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "repository": "git://github.com/NFTCulture/nftc-contracts.git"
}
